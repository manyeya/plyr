{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile",
            "type": "shell",
            "command": "bun run compile",
            "problemMatcher": "$tsc",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "watch",
            "type": "shell",
            "command": "bun run watch",
            "problemMatcher": "$tsc-watch",
            "isBackground": true,
            "group": "build"
        }
    ]
}